<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:background="#EB690A"
        android:backgroundTint="#EB690A"
        android:elevation="1000sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="436dp"
        app:cardCornerRadius="50px"
        app:cardElevation="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.63">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/poppins_bold"
            android:text="Log in"
            android:textSize="40sp">

        </TextView>

        <Button
            android:id="@+id/login"
            android:onClick="loginn"
            android:layout_width="148dp"
            android:layout_height="60dp"
            android:layout_marginLeft="180px"
            android:layout_marginTop="800px"
            android:backgroundTint="#EB690A"
            android:fontFamily="@font/poppins_bold"
            android:text="Log in"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="540dp" />

        <EditText
            android:id="@+id/email1"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100px"
            android:layout_marginTop="300px"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/bg"
            android:ems="10"
            android:hint="email"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/password2"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginLeft="100px"
            android:layout_marginTop="520px"
            android:background="@drawable/bg"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="690px"
            android:fontFamily="@font/poppins_light"
            android:onClick="forgot"
            android:text="Forgot password?"
            android:textColor="#9A9998"
            android:textSize="15dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="360dp"
            android:fontFamily="@font/poppins_light"
            android:onClick="gt_signin"
            android:text="Sign up"
            android:textSize="25dp"
            tools:ignore="TouchTargetSizeCheck">
        </TextView>

        <ProgressBar
            android:id="@+id/pbL"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg"
            android:backgroundTint="#FBF1EE"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            app:circularflow_radiusInDP="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.416" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>