<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EB690A"
    tools:context=".profile">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Your Profile"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="300dp"
        android:layout_height="520dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="50px"
        app:cardElevation="150px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/pbp"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg"
            android:backgroundTint="#FBF1EE"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:elevation="4000px"
            app:circularflow_radiusInDP="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.416" />

        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginLeft="125px"
            android:layout_marginTop="250px"
            android:background="@drawable/bg"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center">
        </EditText>

        <EditText
            android:id="@+id/uemail"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginLeft="125px"
            android:layout_marginTop="450px"
            android:background="@drawable/bg"
            android:ems="10"
            android:hint="Email(not for login)"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center">
        </EditText>

        <EditText
            android:id="@+id/contactno"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginLeft="125px"
            android:layout_marginTop="650px"
            android:background="@drawable/bg"
            android:ems="10"
            android:inputType="phone"
            android:hint="Contact no."
            android:padding="10dp"
            android:text=""
            android:textAlignment="center">
        </EditText>

        <EditText
            android:id="@+id/address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginLeft="125px"
            android:layout_marginTop="850px"
            android:background="@drawable/bg"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center">
        </EditText>



        <RadioGroup
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1050px"
            android:layout_marginLeft="70px"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/gender"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@drawable/gender_text"
                android:paddingRight="30dp"
                android:button="@null"
                android:layout_weight="1"
                android:text="Male"
                android:textSize="20dp"
                android:paddingLeft="30dp"
                android:textAlignment="center"/>

            <RadioButton
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="10px"
                android:background="@drawable/gender"
                android:textColor="@drawable/gender_text"
                android:fontFamily="@font/poppins_bold"
                android:padding="5dp"
                android:button="@null"
                android:text="Female"
                android:textAlignment="center"/>

        </RadioGroup>

        <Button
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginLeft="90px"
            android:layout_marginTop="1200px"
            android:ems="10"
            android:textAllCaps="false"
            android:padding="0dp"
            android:text="Submit"
            android:onClick="submit"
            android:textAlignment="center">
        </Button>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="profile_picture"
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="200px"
        app:cardElevation="170px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        android:foregroundGravity="center">

        <ImageView
            android:id="@+id/dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/add" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.012"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:onClick="back"/>

</androidx.constraintlayout.widget.ConstraintLayout>